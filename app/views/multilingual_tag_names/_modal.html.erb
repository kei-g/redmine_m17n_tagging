<%= form_for [@tag.project, @tag, @name] do |f| %>
  <fieldset class="box tabular">
    <legend><%= legend %></legend>
    <p>
      <%= f.label :language %>
      <%= f.select :language, @languages.map{|language|[l(:general_lang_name, locale: language), language]} %>
    </p>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name, size: 60 %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 6 %>
    </p>
  </fieldset>
  <p class="buttons">
    <%= f.submit l(submit) %>
  </p>
<% end %>
